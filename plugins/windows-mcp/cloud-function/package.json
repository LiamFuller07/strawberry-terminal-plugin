{
  "name": "get-windows-credentials",
  "version": "1.0.0",
  "description": "GCP Cloud Function to provide Windows VM credentials for Strawberry Terminal",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/compute": "^4.0.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^3.0.0"
  },
  "scripts": {
    "start": "functions-framework --target=getWindowsCredentials",
    "deploy": "gcloud functions deploy get-windows-credentials --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=getWindowsCredentials --trigger-http --no-allow-unauthenticated"
  }
}
